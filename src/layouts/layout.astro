---
import '../styles/global.css'
import Button from '../components/button.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Async</title>
	</head>
	<body>
		<div class="border-b border-gray-200 px-3 md:px-8 lg:px-12 sticky top-0 z-20">
			<div
				class="border-l border-r border-gray-200 bg-blue-200/20 backdrop-blur-lg py-4 px-4 md:px-8 flex flex-col md:flex-row md:justify-between md:items-center"
			>
				<div class="flex flex-row gap-4 items-baseline">
					<h2 class="font-serif text-3xl font-medium text-blue-600 text-center text-balance">
						Async
					</h2>
					<p class="text-center">
						<span class="text-blue-400 text-balance text-xs">by Asier Zapata</span>
					</p>
				</div>
				<nav class="flex items-center flex-row gap-4 mt-4 md:mt-0">
					<Button url="/" size="sm">
						<span class="text-blue-400 font-light"> Home </span>
					</Button>
					<Button url="/about-me" size="sm">
						<span class="text-blue-400 font-light"> About Me </span>
					</Button>
				</nav>
			</div>
		</div>
		<main class="mx-3 grow md:mx-8 lg:mx-12 border-gray-200 border-x">
			<slot />
		</main>
	</body>

	<style>
		body {
			display: flex;
			flex-direction: column;
			min-height: 100vh;
		}
	</style>
</html>
